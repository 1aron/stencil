{
  "name": "confapp",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "npm run build.clean && npm run transpile && npm run bundle",
    "build.clean": "rimraf dist && rimraf www/build",
    "bundle": "webpack",
    "build.quick": "npm run transpile && npm run bundle",
    "transpile": "node scripts/transpile.js",
    "lint": "tslint --config src/tslint.json 'src/**/*.ts'",
    "validate": "npm run lint",
    "minify": "uglifyjs --compress --mangle --output=www/build/main.client.js -- www/build/main.client.js && npm run stats",
    "stats": "gzip --keep --force www/build/main.client.js && gzip -l www/build/main.client.js.gz",
    "serve": "httpster -p 8888 -d www"
  },
  "devDependencies": {
    "httpster": "1.0.3",
    "rimraf": "2.5.4",
    "typescript": "2.2.0",
    "webpack": "2.2.1",
    "uglify-js": "^2.7.5"
  }
}
