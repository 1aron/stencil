{
  "name": "ionic-core",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/transpiled-core/",
    "compare": "node scripts/build.compare.js",
    "copy.fonts": "cp -R src/fonts/ dist/fonts/",
    "build": "npm run transpile && npm run build.themes",
    "build.angular": "cd src/bindings/angular/ && npm run build",
    "build.components": "cd src/compiler && npm run build && node ../../scripts/build.components.js",
    "build.web": "cd src/bindings/web/ && npm run build",
    "build.themes": "node-sass src/themes/ionic.scss --output dist/themes/",
    "start": "npm install && npm run build",
    "test": "(jest --no-cache || true)",
    "test.watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/node": "7.0.5",
    "babili": "0.0.11",
    "jest": "19.0.2",
    "jsdom": "9.11.0",
    "knuth-shuffle": "1.0.1",
    "rimraf": "2.6.1",
    "rollup": "0.41.4",
    "typescript": "2.2.1",
    "webcomponents.js": "^0.7.24"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/scripts/jest.setupfiles.js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|js)$"
  }
}
