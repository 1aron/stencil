{
  "name": "ionic-core",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "npm run clean && npm run transpile && npm run build.compiler && npm run build.web && npm run build.angular && npm run build.universal",
    "build.compiler": "node dist/scripts/build-compiler.js",
    "build.web": "node dist/scripts/build-web.js",
    "build.angular": "node dist/scripts/build-angular.js",
    "build.universal": "node dist/scripts/build-universal.js",
    "start": "npm install && npm run build",
    "test": "(jest --no-cache || true)",
    "test.watch": "jest --watch",
    "transpile": "tsc -p scripts/tsconfig.json & tsc -p src/compiler/tsconfig.json & tsc -p src/bindings/web/tsconfig.json & tsc -p src/bindings/angular/tsconfig.json & tsc -p src/bindings/universal/tsconfig.json",
    "transpile.watch": "tsc -p scripts/tsconfig.json -w & tsc -p src/compiler/tsconfig.json -w & tsc -p src/bindings/web/tsconfig.json -w & tsc -p src/bindings/angular/tsconfig.json -w & tsc -p src/bindings/universal/tsconfig.json -w"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/fs-extra": "^2.0.0",
    "@types/jest": "18.1.1",
    "@types/node": "7.0.5",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-es2015-block-scoped-functions": "^6.22.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.23.0",
    "babel-plugin-transform-es2015-classes": "^6.23.0",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-parameters": "^6.23.0",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.22.0",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "clean-css": "^4.0.12",
    "fs-extra": "^2.1.2",
    "google-closure-compiler": "20170218.0.0",
    "jest": "19.0.2",
    "jsdom": "9.11.0",
    "knuth-shuffle": "1.0.1",
    "node-sass": "^4.5.0",
    "parse5": "^3.0.2",
    "rimraf": "2.6.1",
    "rollup": "0.41.4",
    "tslint": "^5.1.0",
    "tslint-ionic-rules": "0.0.8",
    "typescript": "next"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/scripts/jest.setupfiles.js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|js)$"
  }
}
