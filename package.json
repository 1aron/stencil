{
  "name": "ionic-core",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "compare": "node scripts/build.compare.js",
    "copy.fonts": "mkdir -p dist/ionic-core && cp -R src/fonts/ dist/ionic-core/fonts/",
    "copy.themes": "mkdir -p dist/ionic-core && cp -R src/themes/ dist/ionic-core/themes/",
    "build": "npm run clean && npm run build.core && npm run build.compiler && npm run compare",
    "build.core": "npm run copy.fonts && npm run copy.themes && npm run build.themes",
    "build.compiler": "cd src/compiler && npm run build",
    "build.themes": "node-sass src/themes/ionic.scss --output dist/ionic-core/themes/",
    "build.web": "cd src/bindings/web/ && npm run build",
    "start": "npm install && npm run build",
    "test": "(jest --no-cache || true)",
    "test.watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/node": "7.0.5",
    "babili": "0.0.11",
    "fs-extra": "^2.1.2",
    "jest": "19.0.2",
    "jsdom": "9.11.0",
    "knuth-shuffle": "1.0.1",
    "rimraf": "2.6.1",
    "rollup": "0.41.4",
    "typescript": "2.2.1",
    "webcomponents.js": "^0.7.24"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/scripts/jest.setupfiles.js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|js)$"
  }
}
