  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Style Modes",
      "args": [
        "${workspaceFolder}/bin/stencil",
        "build",
        "--dev",
        "--config",
        "${workspaceFolder}/test/style-modes/stencil.config.ts"
      ],
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Hello World",
      "args": [
        "${workspaceFolder}/bin/stencil",
        "build",
        "--dev",
        "--prerender",
        "--config",
        "${workspaceFolder}/test/hello-world/stencil.config.ts"
      ],
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Hello VDom",
      "args": [
        "${workspaceFolder}/bin/stencil",
        "build",
        "--dev",
        "--prerender",
        "--config",
        "${workspaceFolder}/test/hello-vdom/stencil.config.ts"
      ],
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Hello World Prerender",
      "args": [
        "${workspaceFolder}/test/hello-world/prerender.js"
      ],
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "End-To-End",
      "args": [
        "${workspaceFolder}/bin/stencil",
        "build",
        "--dev",
        "--config",
        "${workspaceFolder}/test/end-to-end/stencil.config.ts"
      ],
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Karma",
      "args": [
        "${workspaceFolder}/bin/stencil",
        "build",
        "--dev",
        "--config",
        "${workspaceFolder}/test/karma/stencil.config.ts"
      ],
      "protocol": "inspector"
    },
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "./node_modules/.bin/jest",
        "--config",
        "jest.debugger.json",
        "-i",
        "--env",
        "jest-environment-node-debug"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "sourceMaps": true
    }
  ]
}