{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-screenshot",
    "pretty": true,
    "rootDir": "../",
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@declarations": [
        "../declarations/index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "include": [
    "../../types/*.d.ts"
  ],
  "files": [
    "./index.ts",
    "./pixel-match.ts"
  ]
}
