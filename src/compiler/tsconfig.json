{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": false,
    "types": [
      "node"
    ],
    "outDir": "../../dist/transpiled-compiler"
  },
  "include": [
    "**/*.ts"
  ]
}