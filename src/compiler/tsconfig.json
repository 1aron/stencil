{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-compiler",
    "pretty": true,
    "rootDir": "../",
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@build-conditionals": [
        "./app-core/build-conditionals.ts"
      ],
      "@declarations": [
        "../declarations/index.ts"
      ],
      "@mock-doc": [
        "../mock-doc/index.ts"
      ],
      "@platform": [
        "../client/index.ts"
      ],
      "@server": [
        "../server/index.ts"
      ],
      "@sys": [
        "../sys/node/index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "include": [
    "../../types/*.d.ts"
  ],
  "files": [
    "./index.ts",
    "../utils/index.ts",
    "../../types/rollup-plugin-commonjs.d.ts",
    "../../types/rollup-plugin-node-globals.d.ts",
    "../../types/rollup-plugin-node-resolve.d.ts"
  ]
}