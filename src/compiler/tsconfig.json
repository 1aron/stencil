{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-compiler",
    "pretty": true,
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@stencil/core/build-conditionals": [
        "./app-core/build-conditionals.ts"
      ],
      "@stencil/core/mock-doc": [
        "../mock-doc/index.ts"
      ]
    },
    "target": "es2015"
  },
  "include": [
    "../../types/*.d.ts"
  ],
  "files": [
    "./index.ts"
  ]
}
