{
  "name": "ionic-compiler",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ../../dist/compiler/",
    "build": "npm run transpile",
    "start": "npm install && npm run build",
    "test": "(jest --no-cache || true)",
    "test.watch": "jest --watch",
    "transpile": "npm run clean && (tsc || true)",
    "transpile.watch": "npm run clean && (tsc --watch || true)"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/node": "7.0.5",
    "babili": "0.0.11",
    "fs-extra": "2.0.0",
    "glob": "^7.1.1",
    "jest": "19.0.2",
    "node-sass": "^4.5.0",
    "rimraf": "2.6.1",
    "typescript": "2.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/scripts/jest.setupfiles.js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|js)$"
  }
}
