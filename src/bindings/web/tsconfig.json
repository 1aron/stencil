{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "../../../dist/transpiled-web"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/components/**/*.ts"
  ]
}