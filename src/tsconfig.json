{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "../dist/transpiled-core",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "bindings",
    "compiler",
    "fonts",
    "node_modules"
  ]
}